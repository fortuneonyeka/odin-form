<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
    </h2>

    <ul >
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form">
<h3>Sign Up</h3>
<%= form_with model: @user do |f|  %>
  <%= f.label :user_name, class: "label" %>
  <%= f.text_field :username, class: "shortInput" %> <br />

  <%= f.label :email, "Email Address", class: "label" %>
  <%= f.text_field :email, class: "shortInput" %> <br />

  <%= f.label :password, class: "label" %>
  <%= f.password_field :password, class: "shortInput" %> <br />


  <%= f.submit "Create account", class: "button createAccount" %>
<% end %>
</div>